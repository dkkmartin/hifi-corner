---
import StartLayout from "../layouts/StartLayout.astro";
import { Image } from "astro:assets";
import backgroundsIMGone from "../assets/backgrounds/frontPage.jpg.jpg";
import backgroundsIMGtwo from "../assets/backgrounds/frontPageMiddle.jpg.jpg";
import "../styles/global.css";
import Gallery from "../components/Gallery.astro";
import SocialGramophone from "../assets/socials/gramophone.jpg";
import SocialHeadset from "../assets/socials/sennheiser_headset.jpg";
import SocialReceiver from "../assets/socials/receiver.jpg";
---

<StartLayout title="HIFI-corner">
	<main>
		<div class="box">
			<Image
				format="webp"
				src={backgroundsIMGone}
				alt="speaker background"
				class="backgroundIMG imgWidth"
			/>
			<div class="box__box">
				<div class="box__hifi">
					<p>hi</p>
					<p>fi</p>
				</div>
				<p class="box__address">hificorner.co.uk</p>
			</div>
		</div>

		<div class="middle">
			<Image
				src={backgroundsIMGtwo}
				alt="background middle"
				class="backgroundIMGtwo imgWidth"
			/>
			<div class="middle__box">
				<p>our edinburgh showroom has now moved</p>
				<p>to stunning new premises on joppa road</p>
			</div>
		</div>
		<Gallery />

		<div class="socials">
			<div class="socials__box">
				<Image
					src={SocialGramophone}
					alt="gramophone"
					class="socials__img imgOne"
				/>
				<div class="iconFacebook">
					<i class="fa-brands fa-facebook" style="color: #d3cfcf;"
					></i>
				</div>
			</div>
			<div class="socials__box">
				<Image
					src={SocialHeadset}
					alt="headset"
					class="socials__img imgTwo"
				/>
				<div class="iconB">
					<i class="fa-solid fa-b fa-2xl" style="color: #8d8989;"></i>
				</div>
			</div>
			<div class="socials__box">
				<Image
					src={SocialReceiver}
					alt="receiver"
					class="socials__img"
				/>
			</div>
		</div>
		<div class="information">
			<div class="information__one">
				<h5>history</h5>
				<p>
					Lorem ipsum dolor sit, amet consectetur adipisicing elit. Id
					omnis labore, perspiciatis facere aperiam quia.
				</p>
			</div>
			<div class="information__two">
				<h5>news</h5>
				<p>
					Lorem ipsum dolor sit, amet consectetur adipisicing elit. Id
					omnis labore, perspiciatis facere aperiam quia.
				</p>
			</div>
			<div class="information__three">
				<h5>shop</h5>
				<p>
					Lorem ipsum dolor sit, amet consectetur adipisicing elit. Id
					omnis labore, perspiciatis facere aperiam quia.
				</p>
			</div>
		</div>
	</main>
</StartLayout>

<style>
	main {
		font-family: "Museo sans rounded webfont", sans-serif;
	}

	.imgWidth {
		width: 100%;
	}

	.backgroundIMG {
		height: auto;
	}

	.box {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		grid-template-rows: 1fr 2fr 1fr;
	}
	.backgroundIMG,
	.box__box {
		grid-column: 1 / -1;
		grid-row: 1 / -1;
	}

	.box__box {
		grid-row: 2 / 2;
		height: 200px;
		justify-self: center;
		align-self: center;
	}

	.box__box > p {
		text-align: center;
		text-transform: uppercase;
		font-size: 1.1em;
		font-weight: 700;
	}

	.box__hifi {
		border: 2px solid rgb(255, 255, 255);
		padding: 6em 1em 0 0.4em;
		font-weight: 700;
		width: 180px;
		height: 180px;
	}

	.box__hifi > p {
		text-transform: uppercase;
		color: rgb(255, 255, 255);
		font-size: 2em;
	}

	.box__address {
		color: rgb(255, 255, 255);
	}

	.middle {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
	}

	.middle__box {
		align-self: center;
	}

	.backgroundIMGtwo,
	.middle__box {
		grid-column: 1 / -1;
		grid-row: 1 / -1;
	}

	.backgroundIMGtwo {
		height: 400px;
	}

	.middle__box > p {
		color: rgb(255, 255, 255);
		text-align: center;
		font-size: 3.5em;
		text-transform: uppercase;
	}

	.socials {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
	}

	.socials__box {
		display: grid;
	}

	.iconFacebook,
	.imgOne {
		grid-column: 1;
		grid-row: 1;
	}
	.iconFacebook {
		margin: 0 auto;
		align-self: center;
	}

	.iconB,
	.imgTwo {
		grid-column: 2;
		grid-row: 1;
	}
	.iconB {
		margin: 0 auto;
		align-self: center;
	}

	.socials__img {
		width: 100%;
	}

	.information {
		display: grid;
		grid-template-columns: repeat(5, 1fr);
	}

	.information__one {
		grid-column: 2/3;
	}
	.information__two {
		grid-column: 3/4;
	}

	.information__three {
		grid-column: 4/5;
	}
</style>

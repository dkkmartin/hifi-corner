<style>
  body {
    font-family: "Museo sans rounded webfont", sans-serif;
  }

  .background {
    margin-top: 8em;
    width: 100%;
    height: 50vh;
    object-fit: cover;
  }

  .speakerBackground {
    display: grid;
  }

  .background,
  .box__box,
  .topBrands,
  .brandBox {
    grid-column: 1;
    grid-row: 1;
  }

  .box__box {
    margin-right: 9em;
    justify-self: right;
    align-self: center;
  }

  .box__box > p {
    text-align: center;
    text-transform: uppercase;
    font-size: 1.2em;
    font-weight: 700;
    color: white;
  }

  .box__hifi {
    border: 2px solid rgb(255, 255, 255);
    padding: 6em 1em 0 0.4em;
    font-weight: 700;
    width: 180px;
    height: 180px;
  }

  .box__hifi > p {
    text-transform: uppercase;
    color: rgb(255, 255, 255);
    font-size: 2em;
  }

  .topBrands {
    color: white;
    text-transform: uppercase;
    font-size: 2em;
    margin-left: 5em;
    justify-self: left;
    align-self: center;
  }

  .brandBox {
    padding-right: 5em;
    padding-left: 5em;
    background-color: rgb(0, 0, 0);
    font-family:;
  }

  .brandBox__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    padding: 1.2em;
    background-color: white;
  }

  .brandBox__brands {
    display: grid;
    grid-template-rows: repeat(7, 1fr);
    gap: 1em;
    background: rgb(0, 0, 0);
    background: linear-gradient(
      90deg,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 1) 0%,
      rgba(28, 28, 28, 1) 34%
    );
    padding: 1.4em;
  }

  .brandBox__brands > h3 {
    color: var(--text-color);
  }

  .brandBox__brands > div {
    display: flex;
    gap: 2em;
    font-size: 1.1em;
    color: white;
    text-transform: uppercase;
  }

  .brandBox__text {
    display: grid;
  }
  .brandBox__background,
  .brandBox__textBox {
    grid-column: 1;
    grid-row: 1;
  }

  .brandBox__background {
    height: 400px;
    object-fit: cover;
  }

  .brandBox__textBox {
    padding: 1.4em;
    color: white;
    font-size: 1.2em;
    line-height: 1.3em;
  }

  .brandBox__textBox > h3,
  a {
    color: var(--text-color);
    padding-bottom: 1em;
    text-transform: uppercase;
  }

  .brandBox__textBox > p {
    margin-bottom: 2em;
    font-size: 1em;
  }

  .brandBox__link {
    margin-top: 3em;
  }
</style>

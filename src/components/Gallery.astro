---
import { Image } from "astro:assets";
import galleryOne from "../assets/gallery/gallery1.png";
import galleryTwo from "../assets/gallery/gallery2.png";
---

<script>
    import Swiper from "swiper";
    import "swiper/css";
    import "swiper/css/navigation";
    import "swiper/css/autoplay";
    import "swiper/css/pagination";
    import { Autoplay, Navigation, Pagination } from "swiper/modules";

    const swiper = new Swiper(".swiper", {
        modules: [Navigation, Autoplay, Pagination],
        loop: true,
        spaceBetween: 100,
        centeredSlides: true,
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
        autoplay: {
            delay: 2500,
            disableOnInteraction: true,
        },
    });
</script>
<div class="gallery">
    <!-- Slider main container -->
    <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
                <Image
                    format="webp"
                    src={galleryOne}
                    alt="gallery"
                    class="imgWidth imgOne"
                /><div class="gallery__heading"><h3>primaluna sounds</h3></div>
            </div>
            <div class="swiper-slide">
                <Image
                    format="webp"
                    src={galleryOne}
                    alt="gallery"
                    class="imgWidth imgTwo"
                /><div class="gallery__heading">
                    <h3>abrakadrabra kekw</h3>
                </div>
            </div>
            <div class="swiper-slide">
                <Image
                    format="webp"
                    src={galleryOne}
                    alt="gallery"
                    class="imgWidth imgThree"
                /><div class="gallery__heading">
                    <h3>hokuspokus fidelihut</h3>
                </div>
            </div>
        </div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-pagination"></div>
    </div>
</div>

<style>
    .imgWidth {
        max-width: 100%;
        justify-self: center;
    }

    .swiper-slide {
        display: flex;
        justify-content: center;
        display: grid;
        grid-template-columns: 200px 1fr 200px;
        margin-left: 0.4em;
    }

    .swiper-slide,
    .gallery__heading {
        grid-column: 1;
        grid-row: 1;
    }

    .gallery__heading {
        font-size: 2em;
        padding-top: 2em;
        color: var(--text-color);
        text-transform: uppercase;
        padding-left: 1.1em;
    }

    .gallery__heading > h3 {
        font-weight: 300;
    }

    .gallery {
        width: 100%;
    }

    .swiper {
        width: 90%;
        height: 500px;
        margin-bottom: 4em;
    }

    .swiper-button-next, .swiper-button-prev {
        color: var(--text-color);
        --swiper-navigation-size: 70px;
    }
    
    .swiper-pagination{
        --swiper-pagination-color:var(--text-color)
    }
</style>

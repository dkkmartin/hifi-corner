<style>
    footer {
        background-color: rgb(205, 176, 103);
        max-height: 82px;
    }

    .footerContainer p,
    a {
        margin: 0;
        font-family: "Museo sans rounded webfont";
        font-weight: 700;
        font-size: 12px;
    }

    .footerContainer {
        padding: 1em 2em;
        display: grid;
        grid-template-columns: 1fr 1fr 3fr 2fr 1fr;
    }

    .footerDiv1 {
        display: grid;
        width: 300px;
        height: 50px;
    }

    .footerDiv2 {
        height: 50px;
        width: 200px;
    }

    .footerDiv2 a {
        color: white;
        text-decoration: none;
    }

    .footerDiv3 {
        grid-column: 4/5;
        display: grid;
        grid-template-columns: repeat(6, auto);
        grid-template-rows: 1fr;
        max-width: 300px;
    }

    .footerDiv3 img {
        scale: 120%;
    }

    .footerDiv3 a {
        font-size: 10px;
        color: white;
        text-decoration: none;
        text-align: center;
        max-height: 10px;
    }

    .footerDiv4 {
        display: grid;
        grid-template-columns: repeat(4, auto);
        column-gap: 0.5em;
        justify-content: right;
    }

    .footerDiv4 a {
        max-height: 16px;
        max-width: 16px;
    }

    .fa-globe {
        color: white;
    }
</style>

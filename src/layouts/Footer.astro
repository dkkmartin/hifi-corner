---
import "../styles/global.css";
import { Image } from "astro:assets";
import youtube from "../assets/footer/play.png";
import facebook from "../assets/footer/facebook.png";
import twitter from "../assets/footer/twitter.png";
import linkedin from "../assets/footer/linkedin.png";
---

<footer>
    <div class="footerContainer">
        <div class="footerDiv1">
            <p>Hi-Fi Corner</p>
            <p>Edinburgh 2 Joppa Road EH15 2EU</p>
            <p>Falkirk 44 Cow Wynd FK1 1PU</p>
        </div>

        <div class="footerDiv2">
            <a>Returns & Refunds â”ƒ Privacy Policy</a>
        </div>

        <div class="footerDiv3">
            <p>Worldpay</p>
            <p></p>
            <p></p>
            <p></p>
            <p></p>
            <p>PayPal</p>
        </div>

        <div class="footerDiv4">
            <p>
                <Image class="" src={youtube} alt="" format="webp" />
            </p>
            <p>
                <Image class="" src={facebook} alt="" format="webp" />
            </p>
            <p>
                <Image class="" src={twitter} alt="" format="webp" />
            </p>
            <p>
                <Image class="" src={linkedin} alt="" format="webp" />
            </p>
        </div>
    </div>
</footer>

<style>
    footer {
        background-color: rgb(205, 176, 103);
        max-height: 82px;
    }

    .footerContainer p,
    a {
        margin: 0;
        font-family: "Museo sans rounded webfont";
        font-weight: 700px;
        font-size: 12px;
    }

    .footerContainer {
        padding: 1em 2em;
        display: grid;
        grid-template-columns: 1fr 1fr 3fr 2fr 1fr;
    }

    .footerDiv1 {
        display: grid;
        width: 300px;
        height: 50px;
    }

    .footerDiv2 {
        height: 50px;
        width: 200px;
    }

    .footerDiv2 a {
        color: white;
    }

    .footerDiv3 {
        grid-column: 4/5;
        display: grid;
        grid-template-columns: repeat(6, auto);
        grid-template-rows: 1fr;
    }

    .footerDiv3 p {
        font-size: 10px;
        color: white;
    }
</style>

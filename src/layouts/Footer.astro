<style>
    footer {
        background-color: rgb(205, 176, 103);
        max-height: 82px;
    }

    .footerContainer p,
    a {
        margin: 0;
        font-family: "Museo sans rounded webfont";
        font-weight: 700px;
        font-size: 12px;
    }

    .footerContainer {
        padding: 1em 2em;
        display: grid;
        grid-template-columns: 1fr 1fr 3fr 1fr 1fr;
    }

    .footerDiv1 {
        display: grid;
        width: 300px;
        height: 50px;
    }

    .footerDiv2 {
        height: 50px;
        width: 200px;
    }

    .footerDiv2 a {
        color: white;
    }

    .footerDiv3 {
        grid-column: 4/5;
        display: grid;
        grid-template-columns: repeat(6, auto);
        grid-template-rows: 1fr;
    }

    .footerDiv3 p {
        font-size: 10px;
        color: white;
    }
</style>
